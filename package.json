{
  "name": "claude-think-tracker",
  "version": "1.0.0",
  "description": "MCP server and web app to capture and browse Claude Code thinking data",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:server": "node dist/server.js",
    "start:mcp": "node dist/mcp-server.js",
    "dev": "tsx watch src/server.ts",
    "dev:mcp": "tsx watch src/mcp-server.ts",
    "db:init": "node dist/db/init.js",
    "clean": "rm -rf dist"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "cors": "^2.8.5",
    "express": "^4.22.1",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.25",
    "@types/node": "^22.10.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
